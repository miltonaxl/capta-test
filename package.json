{
  "name": "colombia-working-days-api",
  "version": "1.0.0",
  "description": "API para cálculo de fechas hábiles en Colombia",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --testPathIgnorePatterns=e2e",
    "test:e2e": "jest --testPathPattern=e2e --runInBand --forceExit",
    "test:watch": "jest --watch --testPathIgnorePatterns=e2e",
    "test:e2e:watch": "jest --watch --testPathPattern=e2e --runInBand"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "date-holidays": "^3.26.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "luxon": "^3.4.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "api",
    "colombia",
    "working-days",
    "holidays"
  ],
  "author": "Developer",
  "license": "MIT"
}
